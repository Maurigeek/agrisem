{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "./**/*.ts",
    "../schema/**/*.ts"     
  ],

  "exclude": [
    "node_modules",
    "dist",
    "vite.ts"
  ]
}
